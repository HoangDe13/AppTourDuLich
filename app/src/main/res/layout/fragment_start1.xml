<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/nendangki"
    tools:context=".FragmentStart1">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="271dp"
        android:layout_height="244dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="40dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifhyView"
            android:layout_width="391dp"
            android:layout_height="396dp"
            android:layout_marginStart="-55dp"
            android:layout_marginTop="-80dp"
            android:src="@drawable/img_start4" />
    </androidx.cardview.widget.CardView>

    <com.pixelcan.inkpageindicator.InkPageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="112dp"
        app:ipi_animationDuration="320"
        app:ipi_currentPageIndicatorColor="@android:color/black"
        app:ipi_dotDiameter="20dp"
        app:ipi_dotGap="20dp"
        app:ipi_pageIndicatorColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSloganStart1.2"></com.pixelcan.inkpageindicator.InkPageIndicator>

    <TextView
        android:id="@+id/txtSloganStart1.1"
        android:layout_width="272dp"
        android:layout_height="71dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="380dp"

        android:layout_marginEnd="127dp"
        android:fontFamily="@font/artifika"
        android:gravity="center"
        android:shadowColor="#0D7AB1"
        android:shadowDx="5"
        android:shadowRadius="100"
        android:text="@string/sloganstart1.1"
        android:textColor="#024457"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSloganStart1.2"
        android:layout_width="301dp"
        android:layout_height="104dp"
        android:layout_marginStart="68dp"

        android:layout_marginTop="29dp"
        android:fontFamily="@font/artifika"
        android:gravity="center|top"
        android:shadowColor="#CABA4F"
        android:shadowDx="5"
        android:shadowRadius="20"
        android:text="@string/sloganstart1.2"
        android:textColor="#B71C1C"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSloganStart1.1" />

</androidx.constraintlayout.widget.ConstraintLayout>