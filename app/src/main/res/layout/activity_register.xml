<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nendangnhapdangky"
    tools:context=".Register">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="404dp"
        android:layout_height="198dp"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="20dp"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/travel_in_vietnam" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="411dp"
        android:layout_height="474dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="717dp"
                android:gravity="center|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/hoten"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edHoTenDK"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/identification24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="@string/sex"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="62dp">

                    <RadioButton
                        android:id="@+id/btnGioiTinhNam"
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:text="@string/Boy" />

                    <RadioButton
                        android:id="@+id/btnGioiTinhNu"
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:text="@string/Girl" />

                </RadioGroup>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="11dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="@string/Birthday"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edNgaySinhDK"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableStart="@drawable/calendar24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:paddingStart="10dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="@string/phone"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edSDTDK"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/telephone__1_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/tvHoTenProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="@string/CCCD"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edCMNDDK"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/id_card24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="@string/diachi"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edDiaChiDK"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/placeholder__1_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="29dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="15dp">

                    <Button
                        android:id="@+id/btnSubmitDangKi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/baloo"
                        android:text="@string/Register"
                        android:textSize="18sp"
                        app:backgroundTint="#019ac1" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>