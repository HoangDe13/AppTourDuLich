<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nendangnhapdangky"
    android:orientation="vertical"
    tools:context=".SignLoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="281dp"
        android:layout_height="51dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="217dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSDT">

        <Button
            android:id="@+id/btndn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#019AC1"
            android:fontFamily="@font/baloo"
            android:text="@string/Login"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:backgroundTint="#00019AC1"
            app:backgroundTintMode="screen" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="409dp"
        android:layout_height="53dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="37dp"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/youhaveaccount" />

        <TextView
            android:id="@+id/btnDangKi"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/baloo"
            android:paddingLeft="10dp"
            android:text="@string/Register"
            android:textColor="#0384A5"
            android:textSize="18dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edtSDT"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="41dp"
        android:background="?attr/editTextBackground"
        android:drawableLeft="@drawable/phone24"
        android:drawablePadding="10dp"
        android:hint="@string/prompt_usename"
        android:inputType="number"
        android:padding="15dp"
        android:selectAllOnFocus="true"
        android:shadowColor="#002EDA"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="413dp"
        android:layout_height="164dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/travel_in_vietnam" />

</androidx.constraintlayout.widget.ConstraintLayout>