<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tour">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="388dp"
        android:layout_height="605dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="953dp"
                android:gravity="center|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:text="Ten"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtTenTour"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/identification24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:text="Phuongtien"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/PhuongTien"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/identification24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:text="KhachSan"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Khachsan"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/identification24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="DonGia"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/DonGia"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/telephone__1_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="NgayKhoiHanh"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/NgayKhoiHanh"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableStart="@drawable/calendar24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:paddingStart="10dp" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="NgayKetThuc"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/NgayKetThuc"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableStart="@drawable/calendar24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:paddingStart="10dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="Mota"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/MoTa"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/placeholder__1_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="tinhTrang"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/TinhTrang"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/placeholder__1_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="khu vuc"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/KhuVuc"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/placeholder__1_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="noikhoihanh"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/NoiKhoiHanh"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/placeholder__1_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="Songay"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/SoNgay"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/placeholder__1_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="@string/diachi"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edDiaChiDK6"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:drawableStart="@drawable/placeholder__1_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="#C9000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="29dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="15dp">

                    <Button
                        android:id="@+id/btnLuu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/baloo"
                        android:text="@string/Register"
                        android:textSize="18sp"
                        app:backgroundTint="#019ac1" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageTrour"
        android:layout_width="224dp"
        android:layout_height="97dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/btnChonAnh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camnangsapa" />

    <Button
        android:id="@+id/btnChonAnh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="67dp"
        android:text="Chọn ảnh"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageTrour"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>